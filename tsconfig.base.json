{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@prodgenie/libs/constant": ["libs/constant/src/index.ts"],
      "@prodgenie/libs/constant/*": ["libs/constant/src/*"],
      "@prodgenie/libs/prisma": ["libs/prisma/src/index.ts"],
      "@prodgenie/libs/prisma/*": ["libs/prisma/src/*"],
      "@prodgenie/libs/schema": ["libs/schema/src/index.ts"],
      "@prodgenie/libs/schema/*": ["libs/schema/src/*"],
      "@prodgenie/libs/store": ["libs/store/src/index.ts"],
      "@prodgenie/libs/store/*": ["libs/store/src/*"],
      "@prodgenie/libs/supabase": ["libs/supabase/src/index.ts"],
      "@prodgenie/libs/supabase/*": ["libs/supabase/src/*"],
      "@prodgenie/libs/types": ["libs/types/src/index.ts"],
      "@prodgenie/libs/types/*": ["libs/types/src/*"],
      "@prodgenie/libs/ui": ["libs/ui/src"],
      "@prodgenie/libs/ui/*": ["libs/ui/src/*"],
      "@prodgenie/libs/utils": ["libs/utils/src"],
      "@prodgenie/libs/utils/*": ["libs/utils/src/*"]
    }
  }
}
