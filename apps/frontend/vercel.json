{
  "builds": [
    {
      "src": "apps/frontend/",
      "use": "@vercel/static-build",
      "config": { "distDir": "apps/frontend/dist" }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "pnpm install && nx build frontend",
  "installCommand": "pnpm install",
  "devCommand": "nx serve frontend"
}
