{
  "builds": [
    {
      "src": "apps/frontend/",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/frontend/dist",
        "buildCommand": "pnpm install && nx build frontend",
        "installCommand": "pnpm install",
        "devCommand": "nx serve frontend"
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/apps/frontend/dist/index.html" }
  ]
}
